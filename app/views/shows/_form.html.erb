<%= simple_form_for(@show) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :overview %>

    <%= f.input :banner %>

    <%= f.input :poster %>

    <%= f.input :runtime %>

    <%= f.input :network %>

    <%= f.input :rating %>

    <%= f.input :status %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
