<p id="notice"><%= notice %></p>

<div class="col-xs-12 col-sm-5 col-md-6">
  <h3>Dernière série modifiée</h3>
  <div class="blog-stripe">
      <a href="#">
          <img src="http://www.edilivre.com/media/blog/2013/07/game-of-thrones-season-4.jpg" alt="" class="feature">
      </a>
      <div class="block-title">
          <h2 class="text-center">Game Of Thrones</h2>
          <p class="author text-center"><small>Episode 1 - Saison 6</small></p>
      </div>
  </div>
</div>
<div class="col-xs-12 col-sm-7 col-md-6 pull-right">
<h3>Vos séries</h1>

    <% @shows.each do |show| %>
      
        <div class="row shows-item">
          <div class="col-xs-3">
            <img class="img-thumbnail img-responsive" src="http://placehold.it/190x100">
          </div>
          <div class="col-xs-5">
            <p><%= show.name %></p>
            <p class="author">Episode 6 - Saison 4</p>
            <p><%= show.rating %></p>
          </div>
          <div class="col-xs-4">
            <div class="btn-group pull-right shows-actions" role="group">
              <%= link_to show, :class => "btn btn-sm btn-success show" do %>
                <span class="glyphicon glyphicon-eye-open"></span>
              <% end %>
              <%= link_to edit_show_path(show), :class => "btn btn-sm btn-primary edit" do %>
                <span class="glyphicon glyphicon-pencil"></span>
              <% end %>
              <%= link_to show, method: :delete, data: { confirm: 'Êtes-vous certain?' }, :class => "btn btn-sm btn-danger delete" do %>
                <span class="glyphicon glyphicon-trash"></span>
              <% end %>
            </div>
          </div>
        </div>

    <% end %>
<%= link_to 'Nouvelle série', new_show_path, class: "btn btn-success" %>
</div>

