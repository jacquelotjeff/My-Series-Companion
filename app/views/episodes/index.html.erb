<p id="notice"><%= notice %></p>

<h1>Listing Episodes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Firstaired</th>
      <th>Overview</th>
      <th>Rating</th>
      <th>Ratingcount</th>
      <th>Season</th>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.name %></td>
        <td><%= episode.number %></td>
        <td><%= episode.firstaired %></td>
        <td><%= episode.overview %></td>
        <td><%= episode.rating %></td>
        <td><%= episode.ratingcount %></td>
        <td><%= episode.season %></td>
        <td><%= episode.filename %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

