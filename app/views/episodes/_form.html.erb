<%= simple_form_for(@episode) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>

    <%= f.input :number %>

    <%= f.input :firstaired %>

    <%= f.input :overview %>

    <%= f.input :rating %>

    <%= f.input :ratingcount %>

    <%= f.association :season %>

    <%= f.input :filename %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
